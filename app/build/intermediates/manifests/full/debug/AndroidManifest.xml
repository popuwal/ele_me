<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ele_me"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="27" />

    <!-- 使用网络功能所需权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.example.BaseApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ele_me.activity.WelcomeActivity"
            android:configChanges="orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.ele_me.activity.HomePageActivity" />
        <activity android:name="com.example.ele_me.activity.RestaurantDetailActivity" />
        <activity android:name="com.example.ele_me.activity.DianPingWebActivity" />
        <activity android:name="com.example.ele_me.activity.LoginActivity" />
        <activity android:name="com.example.ele_me.activity.CameraActivity" />
        <activity
            android:name="com.example.ele_me.activity.Camera2Activity"
            android:hardwareAccelerated="true" />
        <activity android:name="com.example.ele_me.activity.GalleryActivity" />
    </application>

</manifest>